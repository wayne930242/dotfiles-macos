#!/bin/bash

# JankyBorders configuration
# Match sketchybar cyberpunk theme

options=(
    style=round
    width=4.0
    hidpi=off
    ax_offset=0
    ay_offset=6
    active_color=0xff00fff7   # Neon cyan (same as sketchybar border)
    inactive_color=0x66ff00ff # Dim magenta for unfocused (cyberpunk)
)

borders "${options[@]}"
